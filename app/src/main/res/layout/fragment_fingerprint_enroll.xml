<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/fragment_fingerprint_enroll_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_enrollment"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/fragment_fingerprint_enroll_title_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_enrollment_sub"
        android:paddingBottom="20dp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <com.hookedonplay.decoviewlib.DecoView
            android:id="@+id/fragment_fingerprint_enroll_dv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/standard_margins" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/fingerprint_icon" />
    </FrameLayout>

</LinearLayout>